
@{
    ViewData["Title"] = "Index";
    
}
<h1>Student Management by using Ajax and JQuery</h1>
<button class="btn btn-primary m-2" id="AddStudent">Add Student</button>

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>RollNo</th>
            <th>Name</th>
            <th>Age</th>
            <th>DateOfBirth</th>
            <th>Gender</th>
            <th>Marks</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody class="text-center" id="table_data"></tbody>
</table>
<div class="modal fade modal" id="StudentModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title" id="heading"></h1>
                <button class="btn-close text-danger" onclick="HideModalPopUp()"></button>
            </div>
            <div class="modal-body">
                <form method="post">
                    <div class="form-group" id="RollNo">
                        <label>Id</label>
                        <input type="text" class="form-control" id="RollNoid"  disabled="disabled"/>
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" placeholder="Enter your name" class="form-control" id="Name" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Age</label>
                        <input type="number" placeholder="Enter your Age" class="form-control" id="Age" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>DOB</label>
                        <input type="date" class="form-control" id="DOB" />
                    </div>
                    <div class="form-group">
                        <label>Gender</label>
                        <div>
                            <input type="radio" id="Male" name="gender" value="Male" autocomplete="off" />Male
                            <input type="radio" id="Female" name="gender" value="Female" autocomplete="off" />Female
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Marks</label>
                        <input type="text" placeholder="Enter your Marks" class="form-control" id="Marks" autocomplete="off" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" onclick="AddStudents()" id="AddStudentValue">Save</button>
                <button class="btn btn-warning" onclick="UpdateStudent()" id="btnUpdate">Update</button>
                <button class="btn btn-danger btn-default" onclick="ClearTextBox()">Clear</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/custom.js"></script>